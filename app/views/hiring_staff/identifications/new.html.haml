- content_for :page_title_prefix do
  = t('sign_in.title')

.govuk-grid-row

  .govuk-grid-column-two-thirds
    %h1.govuk-heading-l= t('sign_in.title')

    %p.govuk-body-l= t('sign_in.intro')

    = simple_form_for :identifications, url: identifications_path, :defaults => { :input_html => { :class => "text" } }, method: :post do |f|

      .govuk-form-group
        %fieldset.govuk-fieldset
          %legend.govuk-fieldset__legend.govuk-fieldset__legend--xl
            %h2.govuk-heading-m= t('sign_in.legend')
          .govuk-radios
            = f.collection_radio_buttons :name, identification_options, :first, :last, { item_wrapper_tag: :div, item_wrapper_class: 'govuk-radios__item' } do |b|
              = b.radio_button(:class => "govuk-radios__input") + b.label(:class => "govuk-radios__label")

        %p
          = link_to(t('identification.find_school_information'), 'https://get-information-schools.service.gov.uk/', target: :_blank)
          = "from the location tab."
        = f.submit t('sign_in.link'), class: 'govuk-button'
