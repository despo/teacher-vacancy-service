- content_for :page_title do
  = t('sign_in.title')

.grid-row

  .column-two-thirds
    %h1.heading-large= t('sign_in.title')

    %p.lede= t('sign_in.intro')

    = simple_form_for :schoolarea, :url => url_for(:action => 'parse_area'), :method => 'post' do |f|

      .form-group
        %legend
          %h2.heading-medium= t('sign_in.legend')

        %fieldset
          .form-group
            = f.collection_radio_buttons :name, [['Cambridgeshire', 'Cambridgeshire'], ['The North East', 'The North East'], ['Central Bedfordshire', 'Central Bedfordshire'], ['Any other area', 'Any other area']],:first, :last, item_wrapper_tag: :div, item_wrapper_class: 'multiple-choice'

        = f.submit 'Sign in to Teaching Jobs', class: 'button'
